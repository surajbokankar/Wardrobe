<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AlertDialog.AppCompat"
    >

    <include
        layout="@layout/toolbar_layout"
        ></include>





    <LinearLayout
        android:id="@+id/mLinearLayoutSocialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2.5">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/mButtonFacebook"
            style="@style/facebook_btn_style"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/fb_icon"
            android:drawableStart="@mipmap/fb_icon"
            android:gravity="center"
            android:text="@string/facebook"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="@dimen/dimen_0.5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/mButtonGoogle"
            style="@style/google_btn_style"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/g_icon"
            android:drawableStart="@mipmap/g_icon"
            android:gravity="center"
            android:text="@string/google"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>
