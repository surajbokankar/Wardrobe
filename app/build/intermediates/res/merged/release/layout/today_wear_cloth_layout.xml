<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pair_cloth_alyout"
    >




    <LinearLayout
        android:id="@+id/layout_pair"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dime_200dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dimen_16dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pair_cloth_image_shirts"
            android:layout_width="@dimen/dime_150dp"
            android:layout_height="@dimen/dime_150dp"
            app:srcCompat="@drawable/ic_like" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pair_cloth_image_pants"
            android:layout_width="@dimen/dime_150dp"
            android:layout_height="@dimen/dime_150dp"
            app:srcCompat="@drawable/ic_like" />

    </LinearLayout>

    <View
        android:id="@+id/layout_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@id/layout_pair"
        android:alpha="0.54"
        android:background="@color/color_dark_grey_transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_divider">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/discard_pair"
            android:layout_width="@dimen/dime_20dp"
            android:layout_height="@dimen/dime_20dp"
            android:layout_marginLeft="@dimen/dime_26dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:srcCompat="@drawable/ic_dont_like_symbol" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/bookmark_pair"
            android:layout_width="@dimen/dime_20dp"
            android:layout_height="@dimen/dime_20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dime_26dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:srcCompat="@drawable/ic_before_favorite" />

    </RelativeLayout>


</RelativeLayout>
